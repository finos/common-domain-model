            }
          ]
        ]
      ],
      "description": "Introduction"
    },
    {
      "nr": 2,
      "name": "execution_date",
      "type": "election",
      "label": "Date of Agreement",
      "style": "annex-date-provision",
      "children": [
        {
          "name": "executionDate",
          "type": "datePicker",
          "hideWhen": {
            "executionDate": null
          },
          "validate": {
            "max": 0
          },
          "placeholder": "Specify date"
        },
        {
          "type": "view",
          "label": "Date of the Agreement will be agreed separately during the execution stage",
          "showWhen": {
            "executionDate": null
          }
        }
      ],
      "description": "Introduction"
    },
    {
      "nr": 3,
      "name": "date_of_collateral_transfer_agreement",
      "type": "election",
      "amend": true,
      "label": "Date of Collateral Transfer Agreement",
      "children": [
        {
          "name": "collateral_transfer_agreement_date",
          "type": "datePicker",
          "label": "Date of Collateral Transfer Agreement",
          "validate": {
            "max": 0
          },
          "placeholder": "Specify date"
        }
      ],
      "optional": true,
      "description": "Introduction"
    },
    {
      "nr": 4,
      "name": "pledged_account_number",
      "type": "election",
      "label": "Pledged Account Number",
      "children": [
        {
          "name": "pledged_account_number",
          "type": "editor",
          "label": "Specify Pledged Account number",
          "placeholder": "Specify text"
        }
      ],
      "description": "Introduction"
    },
    {
      "nr": 5,
      "name": "umbrella_agreement_and_principal_identification",
      "type": "election",
      "label": "Umbrella Agreement and Principal Identification",
      "children": [
        {
          "name": "is_applicable",
          "type": "radio",
          "options": [
            {
              "label": "Not Applicable",
              "value": "not_applicable"
            },
            {
              "label": "Umbrella Agreement",
              "value": "applicable"
            }
          ]
        },
        {
          "name": "language",
          "type": "editor",
          "label": "Umbrella preamble language",
          "showWhen": {
            "is_applicable": "applicable"
          }
        },
        {
          "type": "group",
          "label": "Principal Identification Schedule",
          "children": [
            [
              {
                "type": "view",
                "label": "Principal name",
                "style": "flex-padding"
              },
              {
                "type": "view",
                "label": "Legal Entity Identifier (LEI)",
                "style": "flex-padding"
              },
              {
                "type": "view",
                "label": "Security-provider and Security-taker Elections",
                "style": "flex-padding"
              }
            ],
            {
              "name": "principal_identification_schedule",
              "type": "multi",
              "showWhen": {
                "is_applicable": "applicable"
              },
              "bulkUpload": [
                {
                  "label": "Principal name",
                  "value": "principal_name",
                  "validate": {
                    "name": "name",
                    "type": "matchReference",
                    "preFill": true,
                    "warning": true,
                    "required": true
                  }
                },
                {
                  "label": "Legal Entity Identifier",
                  "value": "lei",
                  "validate": {
                    "name": "lei",
                    "type": "matchReference",
                    "unique": "true",
                    "maxLength": 20,
                    "minLength": 20
                  }
                }
              ],
              "scrollable": true,
              "defaultValue": [
                {},
                {}
              ],
              "repeatChildren": [
                [
                  {
                    "name": "principal_name",
                    "type": "text"
                  },
                  {
                    "name": "lei",
                    "type": "text"
                  },
                  {
                    "name": "additional",
                    "type": "editor"
                  }
                ]
              ]
            }
          ],
          "scrollTo": "umbrella_agreement_and_principal_identification_part2",
          "showWhen": {
            "is_applicable": "applicable"
          }
        }
      ],
      "description": "Introduction"
    },
