{
  "children": [
    {
      "nr": 1,
      "name": "parties",
      "type": "election",
      "label": "Parties",
      "style": "inline",
      "children": [
        [
          [
            {
              "name": {
                "suffix": "_name",
                "position": "partyA"
              },
              "type": "editor",
              "label": "Security-provider",
              "placeholder": "Entity to be specified in the next step"
            }
          ]
        ],
        [
          [
            {
              "name": {
                "suffix": "_name",
                "position": "partyB"
              },
              "type": "editor",
              "label": "Security-taker",
