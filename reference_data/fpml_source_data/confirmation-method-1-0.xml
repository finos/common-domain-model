<?xml version="1.0" encoding="UTF-8"?>
<gcl:CodeList xmlns:gcl="http://xml.genericode.org/2004/ns/CodeList/0.2/" xmlns:doc="http://www.fpml.org/coding-scheme/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xml.genericode.org/2004/ns/CodeList/0.2/ CodeList.xsd">
   <Annotation>
      <Description>
         <doc:definition>Contains a code representing a trade could be confirmed (ie. how the legally binding terms of a derivatives contract could be documented and agreed.).</doc:definition>
         <doc:publicationDate>2011-09-29</doc:publicationDate>
      </Description>
   </Annotation>
   <Identification>
      <ShortName>confirmationMethodScheme</ShortName>
      <Version>1-0</Version>
      <CanonicalUri>http://www.fpml.org/coding-scheme/confirmation-method</CanonicalUri>
      <CanonicalVersionUri>http://www.fpml.org/coding-scheme/confirmation-method-1-0</CanonicalVersionUri>
      <LocationUri>http://www.fpml.org/coding-scheme/confirmation-method-1-0.xml</LocationUri>
   </Identification>
   <ColumnSet>
      <Column Id="Code" Use="required">
         <ShortName>Code</ShortName>
         <Data Type="token">
            <Parameter ShortName="maxLength">63</Parameter>
         </Data>
      </Column>
      <Column Id="Source" Use="optional">
         <ShortName>Source</ShortName>
         <Data Type="string"/>
      </Column>
      <Column Id="Description" Use="optional">
         <ShortName>Description</ShortName>
         <Data Type="string"/>
      </Column>
      <Key Id="PrimaryKey">
         <ShortName>key</ShortName>
         <ColumnRef Ref="Code"/>
      </Key>
   </ColumnSet>
   <SimpleCodeList>
      <Row>
         <Value>
            <SimpleValue>Electronic</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>FpML</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>Confirmation via a shared confirmation facility or platform, or a private/bilateral electronic system.</SimpleValue>
         </Value>
      </Row>
      <Row>
         <Value>
            <SimpleValue>NonElectronic</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>FpML</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>Confirmation via a human-readable written document (possibly transmitted electronically).</SimpleValue>
         </Value>
      </Row>
   </SimpleCodeList>
</gcl:CodeList>