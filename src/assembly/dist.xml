<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>isda-cdm-${project.version}-distribution</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/dependencies</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes/cdm/apidocs</directory>
            <outputDirectory>documentation/java</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/cdm/modeldoc</directory>
            <outputDirectory>documentation/common-domain-model</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/cdm/rosetta</directory>
            <outputDirectory>common-domain-model</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/distribution</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/cdm-sample-xml-files</directory>
            <outputDirectory>json-xml-document</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/cdm-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>isda-cdm-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.build.directory}/cdm-${project.version}-sources.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>isda-cdm-${project.version}-sources.jar</destName>
        </file>
    </files>
</assembly>
