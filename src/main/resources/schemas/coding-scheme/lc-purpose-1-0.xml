<?xml version="1.0" encoding="UTF-8"?>
<gcl:CodeList xmlns:gcl="http://xml.genericode.org/2004/ns/CodeList/0.2/" xmlns:doc="http://www.fpml.org/coding-scheme/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xml.genericode.org/2004/ns/CodeList/0.2/ CodeList.xsd">
   <Annotation>
      <Description>
         <doc:definition>A scheme defining the list of Letter of Credit purposes.</doc:definition>
         <doc:publicationDate>2015-07-15</doc:publicationDate>
      </Description>
   </Annotation>
   <Identification>
      <ShortName>lcPurposeScheme</ShortName>
      <Version>1-0</Version>
      <CanonicalUri>http://www.fpml.org/coding-scheme/lc-purpose</CanonicalUri>
      <CanonicalVersionUri>http://www.fpml.org/coding-scheme/lc-purpose-1-0</CanonicalVersionUri>
      <LocationUri>http://www.fpml.org/coding-scheme/lc-purpose-1-0.xml</LocationUri>
   </Identification>
   <ColumnSet>
      <Column Id="Code" Use="required">
         <ShortName>Code</ShortName>
         <Data Type="token">
            <Parameter ShortName="maxLength">63</Parameter>
         </Data>
      </Column>
      <Column Id="Source" Use="optional">
         <ShortName>Source</ShortName>
         <Data Type="string"/>
      </Column>
      <Column Id="Description" Use="optional">
         <ShortName>Description</ShortName>
         <Data Type="string"/>
      </Column>
      <Key Id="PrimaryKey">
         <ShortName>key</ShortName>
         <ColumnRef Ref="Code"/>
      </Key>
   </ColumnSet>
   <SimpleCodeList>
      <Row>
         <Value>
            <SimpleValue>Documentary</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>FpML</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>Letter of credit extended on documents of title or other legal documents.</SimpleValue>
         </Value>
      </Row>
      <Row>
         <Value>
            <SimpleValue>Financial</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>FpML</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>A Letter of Credit that provides a means of facilitating payments between parties in the normal course of business, supporting the shipment of and payment for goods.</SimpleValue>
         </Value>
      </Row>
      <Row>
         <Value>
            <SimpleValue>Performance</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>FpML</SimpleValue>
         </Value>
         <Value>
            <SimpleValue>A Letter of Credit that supports the performance of non-financial obligations.</SimpleValue>
         </Value>
      </Row>
   </SimpleCodeList>
</gcl:CodeList>